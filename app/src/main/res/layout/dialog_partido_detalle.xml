<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Detalles_Partido"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvEquipoLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/local"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvMarcador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marcador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:id="@+id/tvEquipoVisitante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Visitante"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Fecha"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvCompeticion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_competicion"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvJornadaFase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_jornada"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvAlineacionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Jugadores"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlineacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

</LinearLayout>