<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Contenedor de imagen -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivCompeticionPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_default_trophy"
            android:contentDescription="@string/competition_photo_desc"
            android:background="@drawable/circle_background"
            android:adjustViewBounds="true"
            android:padding="16dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="@string/desc_fabAddPhoto"
            android:src="@drawable/ic_add_a_photo"
            app:backgroundTint="@color/Fondo"
            app:tint="@android:color/white"
            app:elevation="4dp"/>
    </FrameLayout>

    <!-- Campo para el nombre -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNombre"
        style="@style/BaseTextInputLayoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_competicion_name"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="30">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialogNombre"
            style="@style/TextInputEditTextStyleDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para el tipo de competiciÃ³n -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTipo"
        style="@style/BaseTextInputLayoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_tipo_competicion"
        android:labelFor="@id/dialogTipo"
        app:errorEnabled="true">

        <AutoCompleteTextView
            android:id="@+id/dialogTipo"
            style="@style/TextInputEditTextStyleDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>