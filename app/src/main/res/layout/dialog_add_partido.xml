<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Rival -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_rival"
                android:inputType="textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Resultado -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_resultado"
                android:inputType="number|numberSigned"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CompeticiÃ³n -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/spinnerCompeticion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_competicion"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Temporada -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTemporada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_temporada"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fase -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_fase"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Jornada -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJornada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_jornada"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Es Local -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/es_local"
            android:checked="true"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>
</ScrollView>