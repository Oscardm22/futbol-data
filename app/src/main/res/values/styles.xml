<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para TextInputLayout -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
        <item name="boxStrokeColor">@color/selector_input_border</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="errorTextColor">@color/Goles</item>
    </style>

    <!-- Forma de los bordes redondeados -->
    <style name="RoundedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Estilo para el texto dentro de los campos -->
    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- Estilo para botones -->
    <style name="ButtonStyle.FutbolData" parent="Widget.MaterialComponents.Button">
        <!-- Mantén el drawable personalizado -->
        <item name="android:background">@drawable/rounded_button</item>
        <!-- Fuerza a ignorar el colorPrimary del tema -->
        <item name="backgroundTint">@null</item> <!-- Clave: desactiva el tintado automático -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <!-- Asegúrate de que el cornerRadius coincida con tu drawable -->
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CursorColor" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">@color/white</item> <!-- Color del cursor -->
        <item name="colorPrimary">@color/white</item> <!-- Color del texto seleccionado -->
    </style>
</resources>