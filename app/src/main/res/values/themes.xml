<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal -->
    <style name="Theme.FutbolData" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/Fondo</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Colores principales -->
        <item name="colorPrimary">@color/Goles</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorControlActivated">@color/Goles</item>

        <!-- Configuración de texto -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/Estadísticas</item>
        <item name="android:colorControlHighlight">#333A8D3D</item>

        <!-- Asignación de estilos a componentes -->
        <item name="materialButtonStyle">@style/ButtonStyle.FutbolData</item>
        <item name="textInputStyle">@style/RoundedTextInputLayout</item>
    </style>

    <!-- NUEVO TEMA PARA SPLASH SCREEN -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Color de fondo -->
        <item name="windowSplashScreenBackground">@color/Fondo</item>

        <!-- Logo animado -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Color del icono (necesario) -->
        <item name="windowSplashScreenIconBackgroundColor">@color/Fondo</item>

        <!-- Vincula con tu tema principal -->
        <item name="postSplashScreenTheme">@style/Theme.FutbolData</item>

        <!-- Añade esto para mejor compatibilidad -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>